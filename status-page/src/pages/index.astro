  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --green: #10b981;
      --green-light: #d1fae5;
      --green-bg: #ecfdf5;
      --yellow: #f59e0b;
      --yellow-light: #fef3c7;
      --yellow-bg: #fffbeb;
      --red: #ef4444;
      --red-light: #fee2e2;
      --red-bg: #fef2f2;
      --gray-50: #f9fafb;
      --gray-100: #f3f4f6;
      --gray-200: #e5e7eb;
      --gray-300: #d1d5db;
      --gray-400: #9ca3af;
      --gray-500: #6b7280;
      --gray-600: #4b5563;
      --gray-700: #374151;
      --gray-800: #1f2937;
      --gray-900: #111827;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: var(--gray-50);
      color: var(--gray-800);
      line-height: 1.5;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--gray-900);
      text-decoration: none;
    }

    .logo-icon {
      width: 32px;
      height: 32px;
      background: var(--green);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
    }

    .header-actions {
      display: flex;
      gap: 0.75rem;
    }

    .btn {
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.15s;
    }

    .btn-outline {
      border: 1px solid var(--gray-300);
      background: white;
      color: var(--gray-700);
    }

    .btn-outline:hover {
      background: var(--gray-50);
      border-color: var(--gray-400);
    }

    .btn-primary {
      background: var(--gray-900);
      color: white;
      border: 1px solid var(--gray-900);
    }

    .btn-primary:hover {
      background: var(--gray-700);
    }

    /* Status Banner */
    .status-banner {
      padding: 1.5rem;
      border-radius: 12px;
      margin-bottom: 2rem;
    }

    .status-banner.operational {
      background: var(--green-bg);
      border: 1px solid var(--green-light);
    }

    .status-banner.degraded {
      background: var(--yellow-bg);
      border: 1px solid var(--yellow-light);
    }

    .status-banner.down {
      background: var(--red-bg);
      border: 1px solid var(--red-light);
    }

    .status-banner-content {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
    }

    .status-icon {
      font-size: 1.5rem;
      line-height: 1;
    }

    .status-text h2 {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .status-banner.operational .status-text h2 { color: #047857; }
    .status-banner.degraded .status-text h2 { color: #b45309; }
    .status-banner.down .status-text h2 { color: #991b1b; }

    .status-text p {
      font-size: 0.875rem;
      color: var(--gray-600);
    }

    /* Services Section */
    .services-section {
      background: white;
      border-radius: 12px;
      border: 1px solid var(--gray-200);
      overflow: hidden;
    }

    .services-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid var(--gray-200);
    }

    .services-title {
      font-size: 1rem;
      font-weight: 600;
      color: var(--gray-900);
    }

    .date-range {
      font-size: 0.875rem;
      color: var(--gray-500);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .date-nav {
      background: none;
      border: none;
      color: var(--gray-400);
      cursor: pointer;
      padding: 0.25rem;
    }

    .date-nav:hover {
      color: var(--gray-600);
    }

    /* Service Card */
    .service-card {
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid var(--gray-100);
    }

    .service-card:last-child {
      border-bottom: none;
    }

    .service-header {
      display: flex;
      align-items: center;
      margin-bottom: 0.75rem;
    }

    .service-status-icon {
      font-size: 1rem;
      margin-right: 0.75rem;
    }

    .service-name {
      font-weight: 500;
      color: var(--gray-900);
      flex: 1;
    }

    .service-uptime {
      font-size: 0.875rem;
      color: var(--gray-500);
    }

    /* Uptime Bar */
    .uptime-bar {
      display: flex;
      gap: 2px;
      height: 32px;
    }

    .bar-segment {
      flex: 1;
      border-radius: 3px;
      cursor: pointer;
      transition: transform 0.1s;
      position: relative;
    }

    .bar-segment:hover {
      transform: scaleY(1.1);
    }

    .bar-segment.up {
      background: var(--green);
    }

    .bar-segment.degraded {
      background: var(--yellow);
    }

    .bar-segment.down {
      background: var(--red);
    }

    .bar-segment.no-data {
      background: var(--gray-200);
    }

    /* Tooltip */
    .bar-segment:hover::after {
      content: attr(data-tooltip);
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      background: var(--gray-900);
      color: white;
      padding: 0.5rem 0.75rem;
      border-radius: 6px;
      font-size: 0.75rem;
      white-space: nowrap;
      z-index: 10;
      margin-bottom: 8px;
    }

    .bar-segment:hover::before {
      content: '';
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      border: 6px solid transparent;
      border-top-color: var(--gray-900);
      margin-bottom: -4px;
      z-index: 10;
    }

    /* Footer */
    .footer {
      text-align: center;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--gray-200);
    }

    .footer-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--gray-500);
      text-decoration: none;
      font-size: 0.875rem;
    }

    .footer-link:hover {
      color: var(--gray-700);
    }

    /* Responsive */
    @media (max-width: 640px) {
      .header {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
      }

      .uptime-bar {
        height: 24px;
      }

      .bar-segment {
        border-radius: 2px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
