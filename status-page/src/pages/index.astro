        );
      })}
    </section>

    <!-- Footer -->
    <footer class="footer">
      <a href="https://lerncampus24.de" class="footer-link">
        <span>Powered by</span>
        <strong>LernCampus24</strong>
      </a>
    </footer>
  </div>
</body>
</html>
