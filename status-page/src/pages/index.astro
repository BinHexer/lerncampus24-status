    <header class="header">
      <a href="https://lerncampus24.de" class="logo">
        <div class="logo-icon">L</div>
        LernCampus24
      </a>
      <a href="mailto:support@lerncampus24.de" class="btn btn-outline">St√∂rung melden</a>
    </header>

    <!-- Status Banner -->
    <div class={`status-banner ${overallStatus}`}>
      <div class="status-banner-content">
        <span class="status-icon">
          {overallStatus === 'operational' && '‚úÖ'}
          {overallStatus === 'degraded' && '‚ö†Ô∏è'}
          {overallStatus === 'down' && 'üî¥'}
        </span>
        <div class="status-text">
          <h2>
            {overallStatus === 'operational' && 'Alle Systeme funktionieren einwandfrei'}
            {overallStatus === 'degraded' && 'Eingeschr√§nkte Leistung bei einigen Diensten'}
            {overallStatus === 'down' && 'St√∂rung bei einem oder mehreren Diensten'}
