---
// Fetch uptime data from Upptime API files
const REPO_URL = 'https://raw.githubusercontent.com/BinHexer/lerncampus24-status/master';

interface UptimeData {
  name: string;
  slug: string;
  status: 'up' | 'down' | 'degraded';
  uptime: string;
  uptimeDay: string;
  uptimeWeek: string;
  uptimeMonth: string;
  uptimeYear: string;
  time: number;
  timeDay: number;
  timeWeek: number;
  timeMonth: number;
  timeYear: number;
  dailyMinutesDown: Record<string, number>;
}

const services = [
  { name: 'API', slug: 'api' },
  { name: 'Web App', slug: 'web-app' },
  { name: 'Webseite', slug: 'webseite' },
];

let uptimeData: UptimeData[] = [];
let overallStatus: 'operational' | 'degraded' | 'down' = 'operational';

try {
  uptimeData = await Promise.all(
    services.map(async (service) => {
      try {
        const res = await fetch(`${REPO_URL}/api/${service.slug}/uptime.json`);
        if (!res.ok) throw new Error('Not found');
        return await res.json();
      } catch {
        // Return mock data if API not available yet
        return {
          name: service.name,
          slug: service.slug,
          status: 'up',
          uptime: '100',
          uptimeDay: '100',
          uptimeWeek: '100',
          uptimeMonth: '100',
          uptimeYear: '100',
          time: 0,
          timeDay: 0,
          timeWeek: 0,
          timeMonth: 0,
          timeYear: 0,
          dailyMinutesDown: {},
        };
      }
    })
  );

  // Determine overall status
  if (uptimeData.some(s => s.status === 'down')) {
    overallStatus = 'down';
  } else if (uptimeData.some(s => s.status === 'degraded')) {
    overallStatus = 'degraded';
  }
} catch (e) {
  console.error('Failed to fetch uptime data:', e);
}

// Generate 90 days of uptime bars
function generateUptimeBars(dailyMinutesDown: Record<string, number> = {}) {
  const days = [];
  const now = new Date();

  for (let i = 89; i >= 0; i--) {
    const date = new Date(now);
    date.setDate(date.getDate() - i);
    const dateStr = date.toISOString().split('T')[0];
    const minutesDown = dailyMinutesDown[dateStr] || 0;

    let status = 'up';
    if (minutesDown > 0 && minutesDown < 30) {
      status = 'degraded';
    } else if (minutesDown >= 30) {
      status = 'down';
    }

    days.push({
      date: dateStr,
      status,
      minutesDown,
    });
  }

  return days;
}

// Format date range for header
const now = new Date();
const threeMonthsAgo = new Date(now);
threeMonthsAgo.setMonth(threeMonthsAgo.getMonth() - 3);

const formatMonth = (date: Date) => {
  return date.toLocaleDateString('de-DE', { month: 'short', year: 'numeric' });
};

const dateRange = `${formatMonth(threeMonthsAgo)} - ${formatMonth(now)}`;
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LernCampus24 Status</title>
  <meta name="description" content="Echtzeit-Status aller LernCampus24 Dienste">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <!-- Inter Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --green: #10b981;
      --green-light: #d1fae5;
      --green-bg: #ecfdf5;
      --yellow: #f59e0b;
      --yellow-light: #fef3c7;
      --yellow-bg: #fffbeb;
      --red: #ef4444;
      --red-light: #fee2e2;
      --red-bg: #fef2f2;
      --gray-50: #f9fafb;
      --gray-100: #f3f4f6;
      --gray-200: #e5e7eb;
      --gray-300: #d1d5db;
      --gray-400: #9ca3af;
      --gray-500: #6b7280;
      --gray-600: #4b5563;
      --gray-700: #374151;
      --gray-800: #1f2937;
      --gray-900: #111827;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: white;
      color: var(--gray-800);
      line-height: 1.5;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      max-width: 718px;
      margin: 0 auto;
      padding: 2rem 1rem;
      flex: 1;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--gray-900);
      text-decoration: none;
    }

    .logo-icon {
      width: 28px;
      height: 28px;
      background: var(--green);
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 0.875rem;
    }

    .btn {
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.15s;
      border: 1px solid var(--gray-200);
      background: white;
      color: var(--gray-700);
    }

    .btn:hover {
      background: var(--gray-50);
      border-color: var(--gray-300);
    }

    /* Status Banner */
    .status-banner {
      padding: 1rem 1.25rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.875rem;
    }

    .status-banner.operational {
      background: var(--green-bg);
    }

    .status-banner.degraded {
      background: var(--yellow-bg);
    }

    .status-banner.down {
      background: var(--red-bg);
    }

    .status-dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      flex-shrink: 0;
    }

    .status-banner.operational .status-dot {
      background: var(--green);
    }

    .status-banner.degraded .status-dot {
      background: var(--yellow);
    }

    .status-banner.down .status-dot {
      background: var(--red);
    }

    .status-text {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }

    .status-text strong {
      font-size: 0.9375rem;
      font-weight: 600;
      color: var(--gray-900);
    }

    .status-text span {
      font-size: 0.8125rem;
      color: var(--gray-500);
    }

    /* Services Section */
    .services-section {
      background: white;
      border-radius: 8px;
      border: 1px solid var(--gray-200);
      overflow: hidden;
    }

    .services-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.875rem 1.25rem;
      border-bottom: 1px solid var(--gray-100);
    }

    .services-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--gray-900);
    }

    .date-range {
      font-size: 0.8125rem;
      color: var(--gray-400);
    }

    /* Service Card */
    .service-card {
      padding: 1rem 1.25rem;
      border-bottom: 1px solid var(--gray-100);
    }

    .service-card:last-child {
      border-bottom: none;
    }

    .service-header {
      display: flex;
      align-items: center;
      margin-bottom: 0.625rem;
    }

    .service-status-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      margin-right: 0.75rem;
      flex-shrink: 0;
    }

    .service-status-dot.up {
      background: var(--green);
    }

    .service-status-dot.degraded {
      background: var(--yellow);
    }

    .service-status-dot.down {
      background: var(--red);
    }

    .service-name {
      font-weight: 500;
      font-size: 0.875rem;
      color: var(--gray-900);
      flex: 1;
    }

    .service-uptime {
      font-size: 0.8125rem;
      color: var(--gray-400);
      font-weight: 400;
    }

    /* Uptime Bar */
    .uptime-bar {
      display: flex;
      gap: 2px;
      height: 28px;
    }

    .bar-segment {
      flex: 1;
      border-radius: 2px;
      cursor: pointer;
      transition: opacity 0.1s;
      position: relative;
    }

    .bar-segment:hover {
      opacity: 0.8;
    }

    .bar-segment.up {
      background: var(--green);
    }

    .bar-segment.degraded {
      background: var(--yellow);
    }

    .bar-segment.down {
      background: var(--red);
    }

    .bar-segment.no-data {
      background: var(--gray-200);
    }

    /* Tooltip */
    .bar-segment:hover::after {
      content: attr(data-tooltip);
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      background: var(--gray-900);
      color: white;
      padding: 0.375rem 0.625rem;
      border-radius: 4px;
      font-size: 0.75rem;
      white-space: nowrap;
      z-index: 10;
      margin-bottom: 6px;
    }

    .bar-segment:hover::before {
      content: '';
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      border: 5px solid transparent;
      border-top-color: var(--gray-900);
      margin-bottom: -4px;
      z-index: 10;
    }

    /* Footer */
    .footer {
      text-align: center;
      padding: 1.5rem 1rem;
      border-top: 1px solid var(--gray-100);
      margin-top: auto;
    }

    .footer-link {
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
      color: var(--gray-400);
      text-decoration: none;
      font-size: 0.8125rem;
    }

    .footer-link:hover {
      color: var(--gray-600);
    }

    /* Responsive */
    @media (max-width: 640px) {
      .header {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
      }

      .uptime-bar {
        height: 24px;
      }

      .services-header {
        flex-direction: column;
        gap: 0.5rem;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <header class="header">
      <a href="https://lerncampus24.de" class="logo">
        <div class="logo-icon">L</div>
        LernCampus24
      </a>
      <a href="mailto:support@lerncampus24.de" class="btn">Störung melden</a>
    </header>

    <!-- Status Banner -->
    <div class={`status-banner ${overallStatus}`}>
      <div class="status-dot"></div>
      <div class="status-text">
        {overallStatus === 'operational' && (
          <>
            <strong>Wir sind voll funktionsfähig</strong>
            <span>Alle Systeme arbeiten normal.</span>
          </>
        )}
        {overallStatus === 'degraded' && (
          <>
            <strong>Eingeschränkte Leistung</strong>
            <span>Einige Dienste sind beeinträchtigt.</span>
          </>
        )}
        {overallStatus === 'down' && (
          <>
            <strong>Dienst unterbrochen</strong>
            <span>Wir arbeiten an einer Lösung.</span>
          </>
        )}
      </div>
    </div>

    <!-- Services Section -->
    <section class="services-section">
      <div class="services-header">
        <h3 class="services-title">Systemstatus</h3>
        <span class="date-range">{dateRange}</span>
      </div>

      {uptimeData.map((service) => {
        const bars = generateUptimeBars(service.dailyMinutesDown);
        const uptimePercent = parseFloat(service.uptimeMonth || service.uptime || '100').toFixed(2);

        return (
          <div class="service-card">
            <div class="service-header">
              <div class={`service-status-dot ${service.status}`}></div>
              <span class="service-name">{service.name}</span>
              <span class="service-uptime">{uptimePercent}%</span>
            </div>
            <div class="uptime-bar">
              {bars.map((day) => (
                <div
                  class={`bar-segment ${day.status}`}
                  data-tooltip={`${new Date(day.date).toLocaleDateString('de-DE', { day: '2-digit', month: 'short' })}: ${day.minutesDown === 0 ? 'Keine Ausfälle' : `${day.minutesDown} Min. Ausfall`}`}
                />
              ))}
            </div>
          </div>
        );
      })}
    </section>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <a href="https://github.com/upptime/upptime" target="_blank" rel="noopener" class="footer-link">
      Powered by Upptime
    </a>
  </footer>
</body>
</html>
