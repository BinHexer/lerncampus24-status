      </div>

      {uptimeData.map((service) => {
        const bars = generateUptimeBars(service.dailyMinutesDown);
        const uptimePercent = parseFloat(service.uptimeMonth || service.uptime || '100').toFixed(2);

        return (
          <div class="service-card">
            <div class="service-header">
              <span class="service-status-icon">
                {service.status === 'up' && '‚úÖ'}
                {service.status === 'degraded' && '‚ö†Ô∏è'}
                {service.status === 'down' && 'üî¥'}
              </span>
              <span class="service-name">{service.name}</span>
              <span class="service-uptime">{uptimePercent}% uptime</span>
            </div>
            <div class="uptime-bar">
              {bars.map((day) => (
                <div
                  class={`bar-segment ${day.status}`}
                  data-tooltip={`${new Date(day.date).toLocaleDateString('de-DE', { day: '2-digit', month: 'short' })}: ${day.minutesDown === 0 ? 'Keine Ausf√§lle' : `${day.minutesDown} Min. Ausfall`}`}
                />
