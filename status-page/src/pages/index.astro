// Fetch uptime data from Upptime API files
const REPO_URL = 'https://raw.githubusercontent.com/BinHexer/lerncampus24-status/master';

interface UptimeData {
  name: string;
  slug: string;
  status: 'up' | 'down' | 'degraded';
  uptime: string;
  uptimeDay: string;
  uptimeWeek: string;
  uptimeMonth: string;
  uptimeYear: string;
  time: number;
  timeDay: number;
  timeWeek: number;
  timeMonth: number;
  timeYear: number;
  dailyMinutesDown: Record<string, number>;
}

let uptimeData: UptimeData[] = [];
let overallStatus: 'operational' | 'degraded' | 'down' = 'operational';

try {
  // Fetch summary.json which contains all service data with status
  const res = await fetch(`${REPO_URL}/history/summary.json`);
  if (!res.ok) throw new Error('Failed to fetch summary');
  uptimeData = await res.json();

  // Determine overall status
  if (uptimeData.some(s => s.status === 'down')) {
    overallStatus = 'down';
  } else if (uptimeData.some(s => s.status === 'degraded')) {
    overallStatus = 'degraded';
  }
} catch (e) {
  console.error('Failed to fetch uptime data:', e);
}

// Generate 90 days of uptime bars
function generateUptimeBars(dailyMinutesDown: Record<string, number> = {}) {
  const days = [];
  const now = new Date();

  for (let i = 89; i >= 0; i--) {
    const date = new Date(now);
    date.setDate(date.getDate() - i);
    const dateStr = date.toISOString().split('T')[0];
    const minutesDown = dailyMinutesDown[dateStr] || 0;

    let status = 'up';
    if (minutesDown > 0 && minutesDown < 30) {
      status = 'degraded';
    } else if (minutesDown >= 30) {
      status = 'down';
    }

    days.push({
      date: dateStr,
      status,
      minutesDown,
    });
  }

  return days;
}

// Format date range for header
const now = new Date();
const threeMonthsAgo = new Date(now);
threeMonthsAgo.setMonth(threeMonthsAgo.getMonth() - 3);

const formatMonth = (date: Date) => {
  return date.toLocaleDateString('de-DE', { month: 'short', year: 'numeric' });
};

const dateRange = `${formatMonth(threeMonthsAgo)} - ${formatMonth(now)}`;
